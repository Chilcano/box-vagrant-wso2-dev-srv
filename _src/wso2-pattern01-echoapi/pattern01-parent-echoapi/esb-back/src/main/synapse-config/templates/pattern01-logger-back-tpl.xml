<?xml version="1.0" encoding="UTF-8"?>
<template name="pattern01-logger-back-tpl" xmlns="http://ws.apache.org/ns/synapse">
  <parameter name="message"/>
  <sequence>
    <log level="custom">
      <property expression="$func:message" name="BACK LOG"/>
      <property expression="synapse:get-property('MessageID')" name="MessageID"/>
      <property expression="synapse:get-property('transport','SOURCE_MessageID')" name="SOURCE_MessageID"/>
      <property expression="synapse:get-property('Action')" name="Action"/>
      <property expression="synapse:get-property('MESSAGE_FORMAT')" name="MESSAGE_FORMAT"/>
      <property expression="synapse:get-property('OperationName')" name="OperationName"/>
      <property expression="synapse:get-property('From')" name="From"/>
      <property expression="synapse:get-property('To')" name="To"/>
      <property expression="get-property('TRANSPORT_IN_NAME')" name="INCOMING_TRANSPORT"/>
      <property expression="get-property('axis2', 'REMOTE_ADDR')" name="REMOTE_ADDR"/>
    </log>
  </sequence>
</template>
